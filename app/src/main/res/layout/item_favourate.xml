<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingBottom="8dp"
              android:paddingTop="8dp">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_favourate_if"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_is_limit_if"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/tv_bg_Oranger"
            android:gravity="center_horizontal"
            android:padding="3dp"
            android:text="限时抢购"
            android:textColor="@color/tv_White"
            android:textSize="@dimen/micro_text_size"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/tv_name_if"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精选肋排 400g"
            android:textColor="@color/tv_Black"
            android:textSize="@dimen/large_text_size"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商城价格 : "
                android:textColor="@color/tv_Black"
                android:textSize="@dimen/large_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="￥"
                android:textColor="@color/red"
                android:textSize="@dimen/medium_text_size"/>

            <TextView
                android:id="@+id/tv_price_if"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="10.0"
                android:textColor="@color/red"
                android:textSize="@dimen/medium_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="/份"
                android:textColor="@color/tv_Black"
                android:textSize="@dimen/medium_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月销量"
                android:textColor="@color/tv_dark_Gray"
                android:textSize="@dimen/medium_text_size"/>

            <TextView
                android:id="@+id/tv_sale_count_if"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="321"
                android:textColor="@color/tv_dark_Gray"
                android:textSize="@dimen/medium_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="笔"
                android:textColor="@color/tv_dark_Gray"
                android:textSize="@dimen/medium_text_size"/>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_delect_if"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text_size"
            android:layout_marginRight="8dp"
            android:padding="4dp"
            android:layout_gravity="right"
            android:background="@color/red"
            android:text="删除"/>
    </LinearLayout>
</LinearLayout>